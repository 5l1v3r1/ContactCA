@model ContactCA.Api.Models.HomeViewModel
@{
    var localStrings = DependencyResolver.Current.GetService<ContactCA.Api.Core.ILocalStrings>();
}
@section pageScripts
{
    @Scripts.Render("~/bundles/contact")
    @Scripts.Render("~/bundles/agency")
}
@section ko_apply
{
    var viewModel = new contactViewModel();
    ko.applyBindings(viewModel, $("#contact")[0]);
}
@if (Model.ShowWelcome)
{
    @Html.Partial("~/Views/Home/_Welcome.cshtml");
}
@if (Model.ShowServices)
{
    @Html.Partial("~/Views/Home/_Services.cshtml")
}

@if (Model.ShowPortfolio)
{
    @Html.Partial("~/Views/Home/_Portfolio.cshtml")
}
@if (Model.ShowAbout)
{
    @Html.Partial("~/Views/Home/_About.cshtml")
}

@if (Model.ShowTeam)
{
    @Html.Partial("~/Views/Home/_Team.cshtml")
}

@if (Model.ShowClients)
{
    @Html.Partial("~/Views/Home/_Clients.cshtml")
}

@if (Model.ShowContact)
{
    @*removed the InstancePerRequest filter from Autofac to allow this
        todo: further review scenarios where doing so is ok vs. creating a new controller for the partial*@

    Html.RenderAction("Contact");
}